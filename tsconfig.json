{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "strict": true,
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist"
  },
  
  "exclude": [
    "node_modules"
  ]
}
